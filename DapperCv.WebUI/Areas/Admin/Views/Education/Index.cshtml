@model List<EducationListDto>

<div class="text-right my-2">
    <a asp-action="Add" class="btn btn-outline-dark">Add Education</a>
</div>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Title</th>
            <th>Sub Title</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Description</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.StartDate</td>
                <td>
                    @{
                        if (item.EndDate == null)
                        {
                            <span>Present</span>
                        }
                        else
                        {
                            <span>@item.EndDate</span>
                        }
                    }

                </td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Update" asp-controller="Education" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')" asp-action="Delete" asp-controller="Education" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>