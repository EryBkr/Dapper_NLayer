@model SocialMediaIconUpdateDto

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Link Bilgisi</label>
        <span class="text-danger" asp-validation-for="Link"></span>
        <input asp-for="Link" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ikon Bilgisi</label>
        <span class="text-danger" asp-validation-for="Icon"></span>
        <input asp-for="Icon" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>