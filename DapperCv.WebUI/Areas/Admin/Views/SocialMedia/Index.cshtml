@model IEnumerable<SocialMediaIconListDto>

<div class="text-right my-2">
    <a asp-action="Add" class="btn btn-outline-dark">Add Social Media Icon</a>
</div>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>İkon Bilgisi</th>
            <th>Link</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Icon</td>
                <td>@item.Link</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Update" asp-controller="SocialMedia" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')" asp-action="Delete" asp-controller="SocialMedia" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>