@model List<ExperienceListDto>

<section class="resume-section" id="experience">
    <div class="resume-section-content">
        <h2 class="mb-5">Yer Aldığım Projeler ve İşler</h2>
        @foreach (var item in Model)
        {
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@item.Title</h3>
                    <div class="subheading mb-3">@item.SubTitle</div>
                    <p>@item.Description</p>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">
    @item.StartDate.ToString("Y") -
                @{
                    if (item.EndDate == null)
                    {
                        <span>Present</span>
                    }
                    else
                    {
                        @item.EndDate?.ToString("Y")
                    }
                }
            </span></div>
            </div>
        }

    </div>
</section>